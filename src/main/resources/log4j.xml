<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'
                     debug="true" >

    <appender name="fileAppender" class="org.apache.log4j.RollingFileAppender">
        <param name="maxFileSize" value="16KB"/>
        <param name="maxBackupIndex" value="2"/>
        <param name="file" value="logfile.log"/>

            <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1} - %m%n"/>
        </layout>
    </appender>

    <appender name="newAppender" class="org.apache.log4j.Appender">
        <param name="maxFileSize" value="16KB"/>
        <param name="file" value="logfile.txt"/>
    </appender>

    <appender name="consoleAppender" class="org.apache.log4j.ConsoleAppender">
        <param name="target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss} %-5p %c{1} - %m%n"/>
        </layout>
    </appender>


    <category name="org.springframework">
        <priority value="info"/>
        <appender-ref ref="consoleAppender"/>
    </category>

    <category name="ardasProject.processing">
        <priority value="debug"/>
        <appender-ref ref="fileAppender"/>
    </category>

    <category name="ardasProject.DefineTimeLocal">
        <priority value="debug"/>
        <appender-ref ref="fileAppender"/>
    </category>

    <category name="ardasProject.service">
        <priority value="debug"/>
        <appender-ref ref="fileAppender"/>
    </category>

    <category name="ardasProject.myCash">
        <priority value="debug"/>
        <appender-ref ref="fileAppender"/>
    </category>

</log4j:configuration>